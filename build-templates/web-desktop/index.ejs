<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= projectName %></title>
    <meta name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,minimum-scale=1,maximum-scale=1,minimal-ui=true"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="full-screen" content="yes"/>
    <meta name="screen-orientation" content="portrait"/>
    <meta name="x5-fullscreen" content="true"/>
    <meta name="360-fullscreen" content="true"/>

    <meta name="renderer" content="webkit"/>
    <meta name="force-rendering" content="webkit"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

    <link rel="stylesheet" type="text/css" href="<%= cssUrl %>"/>
    <link rel="icon" href="favicon.ico"/>
    <style>
      body {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        align-content: center;
        min-height: 100vh;
        flex-direction: column;
      }
    </style>
  </head>
  <body>
    <div id="GameDiv" cc_exact_fit_screen="false" style="width: <%= previewWidth %>px; height: <%= previewHeight %>px;">
      <div id="Cocos3dGameContainer">
        <canvas id="GameCanvas" width="<%= previewWidth %>" height="<%= previewHeight %>" tabindex="99"></canvas>
      </div>
    </div>
    <%- include(cocosTemplate, {}) %>
    <script>
      const KEY_Backspace = 8;
      function clear(e){
        if(e.keyCode===KEY_Backspace&&(e.ctrlKey||e.metaKey||e.altKey)){
          localStorage.clear();
          location.reload();
          e.preventDefault();
        }
      }
      window.addEventListener("keydown", clear, false);
      const canvas = document.querySelector('canvas');
      canvas&&canvas.addEventListener('keydown',clear,false);
    </script>
  </body>
</html>
